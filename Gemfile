source "http://rubygems.org"

# ORM for our database models
gem "activerecord", "3.2.19"

# Various core class extensions (string inflections, etc.)
gem "activesupport", "3.2.19"

# Connect to the dogecoind instance
gem "bitcoin-client"

# IRC interface
gem 'cinch', :git => 'https://github.com/joshuaxls/cinch.git'

# Make easy calls to APIs (for market data, etc.)
gem "httparty", '0.11'

# Easily cache return vals in methods
gem "memoist"

# Testing
gem "rspec"

# The web server which handles incoming webhooks (!dogetip commands)
gem "sinatra"

# Return JSON from Sinatra
gem "sinatra-contrib"

# Low-overhead database
gem "sqlite3"
